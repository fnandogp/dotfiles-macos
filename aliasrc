##
## Aliases
##

# Common
alias s="sudo"
alias vim="vim -u DEFAULTS"
alias v="nvim"
alias n="nvim -u ~/.config/nvim/init.lua"
alias cdd="cd ~/.dotfiles"

alias ws="cd $HOME/workspace"
alias wsa="cd $HOME/workspace/arkade"
alias wso="cd $HOME/workspace/omneo"

alias gcz="git cz"
alias cz="git cz"

# Laravel
alias art="php artisan"
alias migrate="php artisan migrate"
alias pu="phpunit"
alias puf="phpunit --filter"
alias dcep="docker-compose exec app php"


alias pnr="pnpm run"
